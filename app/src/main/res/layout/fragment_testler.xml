<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Test butonları için bir LinearLayout -->
    <LinearLayout
        android:id="@+id/btnGroupContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <!-- Şema Testleri Butonu -->
        <Button
            android:id="@+id/btnSchemaTests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Şema Testleri"/>

        <!-- Diğer Test Grupları Eklenebilir -->
        <Button
            android:id="@+id/btnAnotherTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diğer Test Grubu"/>

        <!-- İhtiyaca göre başka test butonları eklenebilir -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
