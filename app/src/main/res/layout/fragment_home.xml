<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <!-- Üst Kısım: Bugün Nasıl Hissediyorsun -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoş Geldin"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:text="Bugün nasıl hissediyorsun?"
        android:textAlignment="center"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="16dp">

        <!-- Mükemmel -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/emoji_perfect"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_perfect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mükemmel"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- İyi -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/emoji_good"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_good" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İyi"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Orta -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/emoji_average"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_average" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orta"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Nötr -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/emoji_neutral"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_neutral" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nötr"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Kötü -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/emoji_bad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_bad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kötü"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>


    <!-- Kategoriler İçin RecyclerView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meditasyon Sesleri"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Önerilen Filmler"
        android:textSize="16sp"
        android:layout_marginVertical="16dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Makaleler"
        android:textSize="16sp"
        android:layout_marginVertical="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="Kitaplar"
        android:textSize="16sp"
        android:layout_marginVertical="16dp"
        android:textStyle="bold" />
</LinearLayout>